{
  "prettier.singleQuote": false,
  "prettier.jsxSingleQuote": false,
  "prettier.semi": true,
  "prettier.bracketSameLine": true,
  "prettier.printWidth": 80,
  "prettier.tabWidth": 2,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.autoClosingTags": true,
  "editor.codeActionsOnSave": ["source.organizeImports", "source.fixAll"],
  "editor.detectIndentation": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.unicodeHighlight.allowedLocales": {
    "tr": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "reactSnippets.settings.importReactOnTop": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.wordWrap": "on",
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "diffEditor.ignoreTrimWhitespace": true
  },
  "editor.formatOnSave": true,
  "git.enableSmartCommit": true,
  "git.autofetch": true,

  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "terminal.integrated.fontSize": 10,
  "editor.lineHeight": 1.5,
  "editor.cursorBlinking": "solid",
  "editor.cursorWidth": 3,
  "editor.linkedEditing": true,
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.mouseWheelZoom": true,
  "window.restoreWindows": "none",
  "cursor.cpp.disabledLanguages": ["plaintext", "scminput"],
  "explorer.confirmDelete": false,
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "keybindings": [
    {
      "key": "alt+f1",
      "command": "workbench.files.action.showActiveFileInExplorer"
    }
  ],
  // Fonksiyon yazarken parametre ipuçlarını gösteren popup'ı açar
  "editor.parameterHints.enabled": true,
  // Satır sonlarındaki gereksiz boşlukları otomatik siler
  "files.trimTrailingWhitespace": true,
  // Dosya sonuna otomatik boş satır ekler (git için önemli)
  "files.insertFinalNewline": true,
  // Sağ taraftaki küçük kod haritasını acar
  "editor.minimap.enabled": true,
  // Eşleşen parantezleri renklendirir, kod okunabilirliğini artırır
  "editor.bracketPairColorization.enabled": true,
  // Aktif satırı belirginleştirir
  "editor.renderLineHighlight": "all",
  // 100 karakteri geçen satırları otomatik alt satıra alır
  "editor.wordWrapColumn": 100,
  // Tab tuşu yerine boşluk karakteri kullanır
  "editor.insertSpaces": true,
  // Terminal penceresinde kaç satır geçmiş tutulacağını belirler
  "terminal.integrated.scrollback": 5000,
  // JavaScript ve TypeScript'te otomatik import önerilerini açar
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true
}
